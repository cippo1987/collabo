site_name: 'A collaborative guide to survive accademia'
site_url: 'https://collabo.gitlab.io'
site_dir: 'public'
docs_dir: 'docs'
nav:
        - Home: index.md
theme:
  name: mkdocs
plugins:
  - live-edit
  - pub-obsidian:
    obsidian_dir: .obsidian
    templates_dir: _templates
    backlinks:
      enabled: true
    callouts:
      enabled: true
      indentation: spaces
    comments:
      enabled: true
      inject_as_html: false
    links:
      wikilinks_enabled: true
      img_lazy: true
